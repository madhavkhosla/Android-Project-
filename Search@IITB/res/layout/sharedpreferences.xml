<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
     
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Tablet no"
             android:textSize="20sp" />
    <EditText android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/etSharedPrefs">
	</EditText>

	<Button
	    android:id="@+id/bSave"
	    android:layout_width="112dp"
	    android:layout_height="wrap_content"
	    android:text="Save" >
</Button>
	<Button android:text="Continue" android:id="@+id/bLoad"
		android:layout_width="112dp" android:layout_height="wrap_content"></Button>
<TextView android:text="Load your data" android:id="@+id/tvLoadSharedPrefs"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

</LinearLayout>
